---
pagination:
  data: collections.allTags
  size: 1
  alias: tag
permalink: "/tag/{{ tag | slug }}/"
eleventyComputed:
  title: "Tag: {{ tag }}"
layout: layout.html
---

<section class="space-y-4">
  {% assign posts = collections[tag] | sort: 'date' | reverse %}
  <ul class="not-prose list-none pl-0 divide-y divide-base-150">
    {% for post in posts %}
      <li class="py-3">
        <a class="text-blue hover:text-blue-light font-medium" href="{{ post.url | url }}">{{ post.data.title }}</a>
        {% if post.date %}
          <span class="text-sm text-base-600">â€” {{ post.date | date: "%d.%m.%Y" }}</span>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</section>


